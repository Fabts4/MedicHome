<h1>Mes dernières ordonnances</h1>

<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="UserChoiceModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Choisir un patient</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@prescription, url: doctor_prescriptions_path, method: 'POST') do |f| %>
          <%= f.input :patient_id, collection: Patient.simple_form_collection %>
          <%= f.submit 'Commencer', class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div id="flexbox-centrage">
  <% @prescriptions.sort.reverse!.each do |prescription|  %>
  <div class="card-ordonance">
    <% if prescription.draft? %>
      <p> <i class="fa-solid fa-file-medical fa-xl"></i> <strong>Ordonnance à finaliser</strong> </p>
    <% else %>
      <p> <i class="fa-solid fa-file-medical fa-xl"></i> Ordonnance émise</p>
    <% end %>

    <% if prescription.patient.photo.attached? %>
    <p class="card-footer"><%= cl_image_tag prescription.patient.photo.key, class: "avatar" %></p>
    <% end %>
    <div class="flex-ul">
        <p><i class="fa-solid fa-person"></i> <%= prescription.patient.first_name %> <%= prescription.patient.last_name %></p>
        <p><i class="fa-regular fa-calendar"></i> <%= prescription.date %></p>

    </div>
        <div class="div-link">
      <% if prescription.draft? %>
        <%= link_to edit_doctor_prescription_path(prescription) do %>
          <button class="bn632-hover bn26">Finaliser</button>
        <% end %>
      <% else %>
        <%= link_to doctor_prescription_path(prescription) do %>
          <button class="bn632-hover bn26">Consulter</button>
        </div>
  </div>
        <% end %>
      <% end %>
    <% end %>

