  <li><strong><%= link_to para.name, cart_cart_items_path(@cart, item_id: para.id, quantity: 1), data: {turbo_method: :post} %></strong></li>

  <% if cart_item.present? %>
  <li><%= link_to "Modifier cet element", cart_item_path(cart_item), data: {turbo_method: :patch} %></li> <%# dynamiser la quantity quand le compteur sera codÃ© %>
